		var cellValueDate = cellValue.hasOwnProperty('date') ? cellValue.date : cellValue;
		cellValueDate = new Date(cellValueDate);
		var cellDate = new Date(cellValueDate.getFullYear(),  cellValueDate.getMonth(),  cellValueDate.getDate());
		if (filterLocalDateAtMidnight.getTime() == cellDate.getTime()) {
			return 0;
		}
		if (cellDate < filterLocalDateAtMidnight) {
			return -1;
		}
		if (cellDate > filterLocalDateAtMidnight) {
			return 1;
		}
